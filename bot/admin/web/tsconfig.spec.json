{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jasmine"],
    "baseUrl": ".",
    "paths": {
      "@tock/testing": ["src/testing"],
      "@tock/testing/*": ["src/testing/*"]
    }
  },
  "files": ["src/test.ts", "src/polyfills.ts"],
  "include": ["src/**/*.spec.ts", "src/**/*.d.ts"]
}
