<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ai.tock</groupId>
        <artifactId>tock-docker</artifactId>
        <version>22.3.2-SNAPSHOT</version>
    </parent>

    <artifactId>tock-docker-bot-api</artifactId>
    <packaging>pom</packaging>

    <dependencies>
        <dependency>
            <groupId>ai.tock</groupId>
            <artifactId>tock-bot-api-service</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>io.fabric8</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <configuration>
                    <verbose>true</verbose>
                    <images>
                        <image>
                            <name>tock/bot_api:${project.version}</name>
                            <build>
                                <from>python:3.8-slim-buster</from>
                                <assembly>
                                    <inline>
                                        <dependencySets>
                                            <dependencySet>
                                                <useProjectArtifact>false</useProjectArtifact>
                                                <unpack>false</unpack>
                                            </dependencySet>
                                        </dependencySets>
                                        <files>
                                            <file>
                                                <source>logback.xml</source>
                                                <outputDirectory>.</outputDirectory>
                                            </file>
                                            <file>
                                                <source>requirements.txt</source>
                                                <outputDirectory>.</outputDirectory>
                                            </file>
     <!-- TODO à améliorer-->
     <!-- Problème d'accès aux ressources  -->
     <!-- jep.JepException: Invalid file: /file:/maven/tock-bot-dialog-manager-22.3.2-dialog-manager-v1-SNAPSHOT.jar!/python/graph-solver.py -->
                                            <file>
                                                <source>python/action-reducer.lp</source>
                                                <outputDirectory>./python/</outputDirectory>
                                            </file>
                                            <file>
                                                <source>python/action-resolver.lp</source>
                                                <outputDirectory>./python/</outputDirectory>
                                            </file>
                                            <file>
                                                <source>python/graph-solver.py</source>
                                                <outputDirectory>./python/</outputDirectory>
                                            </file>
                                        </files>
                                    </inline>
                                </assembly>
                                <shell>
                                    <arg>/bin/bash</arg>
                                    <arg>-c</arg>
                                </shell>
                                <env>
                                    <JAVA_HOME>/usr/lib/jvm/java-11-openjdk-amd64</JAVA_HOME>
                                </env>
                                <runCmds>
                                    <run>apt-get update</run>
                                    <run>apt-get install -y curl wget openjdk-11-jdk</run>
                                    <run>python3 -m venv virtual_environment</run>
                                    <run>apt-get install gcc -y</run>
                                    <run>source virtual_environment/bin/activate</run>
    <!--
       TODO MASS :
       J'ai commenté la création des graphes PNG, car
       jep.JepException: <class 'FileNotFoundError'>: 2
        at /usr/local/lib/python3.8/site-packages/pydot.create(pydot.py:1933)
        at /usr/local/lib/python3.8/site-packages/biseau/dot_writer.dot_to_png(dot_writer.py:109)
        at /usr/local/lib/python3.8/site-packages/biseau/core.compile_to_single_image(core.py:122)
        at /maven/python/graph-solver.save_graph_asp(graph-solver.py:93)
        at /maven/python/graph-solver.callClyngo(graph-solver.py:66)
    
       TODO MASS : Check les requirements.txt, il manque peut etre un module
    -->
                                    <run>pip3 install -r maven/requirements.txt</run>
                                </runCmds>
                                <cmd>
                                    <shell>java $JAVA_ARGS -Dfile.encoding=UTF-8 -Dlogback.configurationFile='file:///maven/logback.xml' -cp '/maven/*' ai.tock.bot.api.service.StartBotApiKt</shell>
                                </cmd>
                                <tags>
                                    <tag>${major}</tag>
                                    <tag>${latest}</tag>
                                    <tag>${project.version}</tag>
                                </tags>
                            </build>
                            <run>
                                <ports>
                                    <port>8081:8880</port>
                                </ports>
                                <log>
                                    <prefix>bot_api</prefix>
                                    <color>red</color>
                                </log>
                            </run>
                        </image>
                    </images>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
